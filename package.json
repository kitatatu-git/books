{
  "name": "hackathon-template",
  "version": "0.4.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "postinstall": "npm run db:reflect",
    "db:reflect": "mkdir -p ./storage && drizzle-kit generate && drizzle-kit migrate",
    "db:seed": "tsx src/db/seed.ts",
    "db:clean": "rm -rf ./storage"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.554.0",
    "next": "16.0.4",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.1",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9",
    "eslint-config-next": "16.0.4",
    "jsdom": "^27.2.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^4.0.14"
  }
}
